<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MealVerificationActivity"
    android:background="@color/bg_color"
    >



        <RelativeLayout
            android:id="@+id/second"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="9"
            android:layout_marginHorizontal="20dp"
            android:visibility="gone"
            >


               <RelativeLayout
                   android:id="@+id/upper"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="200dp"

                   >

                   <EditText
                       android:layout_height="wrap_content"
                       android:layout_width="match_parent"
                       android:id="@+id/code"
                       android:hint="Meal Verification Code"
                       android:inputType="number"
                       android:textSize="18dp"
                       android:backgroundTint="@color/base_color"
                       />

                   <ImageView
                       android:id="@+id/passHiddenIcon"
                       android:layout_width="20dp"
                       android:layout_height="20dp"
                       android:src="@drawable/ic_hide"
                       android:layout_centerVertical="true"
                       android:layout_alignParentRight="true"
                       android:layout_marginRight="10dp"
                       />

               </RelativeLayout>

               <androidx.appcompat.widget.AppCompatButton
                   android:id="@+id/verify"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   style="@android:style/Widget.Button"
                   android:text="Verify"
                   android:background="@drawable/button_background"
                   android:textColor="@color/white"
                   android:textSize="18sp"
                   android:textStyle="bold"
                   android:layout_marginTop="20dp"
                   android:paddingHorizontal="20dp"
                   android:layout_below="@+id/upper"
                   android:layout_alignParentRight="true"
                   />









        </RelativeLayout>




        <!-- Main Content -->
        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >




            <!-- Upper Part: Camera Scanner -->
            <com.journeyapps.barcodescanner.DecoratedBarcodeView
                android:id="@+id/barcodeScannerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Switch Camera Button -->
            <Button
                android:id="@+id/switchCameraButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Switch Camera"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"/>

            <!-- Bottom Part: Scanned Result -->
            <TextView
                android:id="@+id/scannedResultTextView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Scanned Number: "
                android:textSize="20sp"
                android:textStyle="bold" />






















        </LinearLayout>


</LinearLayout>