<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    app:cardElevation="12dp"
    app:cardCornerRadius="15dp"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >






    <ImageView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:src="@drawable/ic_error"
        android:layout_marginTop="10dp"
        />


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you sure?"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_margin="11dp"
        android:textAlignment="center"
        />


    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="jkf jnksdnasd jasdjnfsd adf asdf asdf"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_margin="11dp"
        android:textAlignment="center"
        android:paddingHorizontal="20dp"
        android:justificationMode="inter_character"
        />


    <LinearLayout
        android:id="@+id/requestBtnLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        >


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/negativeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@android:style/Widget.Button"
                android:text="Cancel"
                android:background="@drawable/button_background_deny"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingVertical="2dp"
                android:paddingHorizontal="10dp"
                android:layout_marginRight="20dp"
                />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/positiveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/Widget.Button"
            android:text="Ok"
            android:background="@drawable/button_background_accept"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingVertical="2dp"
            android:paddingHorizontal="10dp"
            android:layout_marginLeft="20dp"
            />





    </LinearLayout>





    </LinearLayout>
</androidx.cardview.widget.CardView>