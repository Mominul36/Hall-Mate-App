<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/bg_color"
    android:gravity="center"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >


        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/logo2"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Hall Mate"
            android:textColor="@color/base_color"
            android:textStyle="bold"
            android:textSize="34sp"
            android:textAlignment="center"
            android:paddingHorizontal="30dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your companion for a comfortable and vibrant living experience!"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textAlignment="center"
            android:paddingHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"

            />






        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/s_login"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            style="@android:style/Widget.Button"
            android:text="Student Login"
            android:background="@drawable/button_background_search"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="20dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/m_login"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            style="@android:style/Widget.Button"
            android:text="Manager Login"
            android:background="@drawable/button_background_search"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            />










    </LinearLayout>



</LinearLayout>