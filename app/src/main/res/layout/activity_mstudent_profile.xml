<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MStudentProfileActivity"
    android:background="@color/bg_color"
    >


    <!-- Main content layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        >



        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/home_toolbar_background"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:layout_weight="1"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_back2"
                    android:layout_centerVertical="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="15dp"
                    />


            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <!-- Main Content -->

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >

                <RelativeLayout
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="50dp"
                        app:cardElevation="0dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"

                        android:layout_marginTop="20dp"
                        >
                        <ImageView
                            android:id="@+id/pic"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/profile"
                            />

                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

                <EditText
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_nonfocus_background"
                    android:textSize="26dp"
                    android:textColor="@color/black"
                    android:text="Md Mominul Islam"
                    style="bold"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    />


                <EditText
                    android:id="@+id/hallId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edit_nonfocus_background"
                    android:text="0001"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:enabled="false"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Student Id"
                            android:textSize="14sp"
                            android:textColor="#2A2929"
                            />
                    <EditText
                        android:id="@+id/studentId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_nonfocus_background"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        style="bold"
                        android:layout_marginTop="5dp"
                        android:enabled="false"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Room No"
                        android:textSize="14sp"
                        android:textColor="#2A2929"
                        />
                    <EditText
                        android:id="@+id/room"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_nonfocus_background"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        style="bold"
                        android:layout_marginTop="5dp"
                        android:inputType="numberDecimal"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Due Amount"
                        android:textSize="14sp"
                        android:textColor="#2A2929"
                        />
                    <EditText
                        android:id="@+id/dueAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_nonfocus_background"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        style="bold"
                        android:layout_marginTop="5dp"
                        android:inputType="numberDecimal"


                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Department"
                        android:textSize="14sp"
                        android:textColor="#2A2929"
                        />
                    <EditText
                        android:id="@+id/department"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_nonfocus_background"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        style="bold"
                        android:layout_marginTop="5dp"
                        android:text="CSE"





                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Batch"
                        android:textSize="14sp"
                        android:textColor="#2A2929"
                        />
                    <EditText
                        android:id="@+id/batch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_nonfocus_background"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        style="bold"
                        android:layout_marginTop="5dp"
                        android:inputType="numberDecimal"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="E-mail"
                        android:textSize="14sp"
                        android:textColor="#2A2929"
                        />
                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_nonfocus_background"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        style="bold"
                        android:layout_marginTop="5dp"
                        android:enabled="false"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone"
                        android:textSize="14sp"
                        android:textColor="#2A2929"
                        />
                    <EditText
                        android:id="@+id/phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_nonfocus_background"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        style="bold"
                        android:layout_marginTop="5dp"
                        android:enabled="false"

                        />
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/requestBtnLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="500dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                       android:layout_weight="5"
                        android:gravity="center"
                        >

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/acceptBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@android:style/Widget.Button"
                            android:text="Accept"
                            android:background="@drawable/button_background_accept"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:paddingVertical="3dp"
                            android:paddingHorizontal="15dp"
                            />




                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="5"
                        android:gravity="center"
                        >

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/denyBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@android:style/Widget.Button"
                            android:text="Deny"
                            android:background="@drawable/button_background_deny"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:paddingVertical="3dp"
                            android:paddingHorizontal="15dp"
                            />




                    </LinearLayout>









                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/saveBtnLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="500dp"
                    >

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/saveBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@android:style/Widget.Button"
                        android:text="Save"
                        android:background="@drawable/button_background_accept"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:paddingVertical="3dp"
                        android:paddingHorizontal="15dp"
                        />



                </RelativeLayout>
















            </LinearLayout>


        </ScrollView>


    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>