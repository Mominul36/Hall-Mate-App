<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bg_color"
    tools:context=".Fragments.SHallCardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        >




        <!-- Hall Card Layout -->
        <androidx.cardview.widget.CardView
            android:id="@+id/hallCard"
            android:layout_width="300dp"
            android:layout_height="460dp"
            app:cardCornerRadius="15dp"
            android:layout_gravity="center"
            app:cardElevation="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@color/white"
              >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shaheed Dr. Ziqrul Haque Hall"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:textSize="22sp"
                    android:textColor="@color/accept_button_color"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:paddingHorizontal="15dp"
                    android:fontFamily=""
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Meal Card"
                    android:textAlignment="center"
                    android:layout_marginTop="3dp"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name:   Md Mominul Islam"
                    android:layout_marginTop="8dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                    />

                <TextView
                    android:id="@+id/studentId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="S.Id:      220201033475474"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                    />

                <TextView
                    android:id="@+id/room"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="R. No:   413"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                    />





                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"
                     android:gravity="center"
                     android:layout_marginTop="5dp"
                     >

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="Hall Id: "
                         android:textSize="20sp"
                         android:textStyle="bold"
                         android:textColor="@color/black"
                         android:layout_marginRight="10dp"
                         />


                     <TextView
                         android:id="@+id/hallId"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="1010"
                         android:textSize="24sp"
                         android:textStyle="bold"
                         android:textColor="@color/black"
                         android:background="@drawable/card_id_bg"
                         android:paddingHorizontal="15dp"
                         android:paddingVertical="3dp"
                         />





                 </LinearLayout>


                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    >


                    <TextView
                        android:id="@+id/l1"
                        android:layout_width="50dp"
                        android:layout_height="4dp"
                        android:background="@drawable/corner_bg"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        />

                    <TextView
                        android:id="@+id/l2"
                        android:layout_width="4dp"
                        android:layout_height="50dp"
                        android:background="@drawable/corner_bg"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_below="@+id/l1"
                        />


                    <TextView
                        android:id="@+id/l3"
                        android:layout_width="50dp"
                        android:layout_height="4dp"
                        android:background="@drawable/corner_bg"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_below="@+id/l1"
                        />

                    <TextView
                        android:id="@+id/l4"
                        android:layout_width="4dp"
                        android:layout_height="50dp"
                        android:background="@drawable/corner_bg"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_below="@+id/l3"
                        />





                    <TextView
                        android:id="@+id/l5"
                        android:layout_width="50dp"
                        android:layout_height="4dp"
                        android:background="@drawable/corner_bg"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"

                        />

                    <TextView
                        android:id="@+id/l6"
                        android:layout_width="4dp"
                        android:layout_height="50dp"
                        android:background="@drawable/corner_bg"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:layout_above="@+id/l5"
                        />


                    <TextView
                        android:id="@+id/l7"
                        android:layout_width="50dp"
                        android:layout_height="4dp"
                        android:background="@drawable/corner_bg"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"

                        />

                    <TextView
                        android:id="@+id/l8"
                        android:layout_width="4dp"
                        android:layout_height="50dp"
                        android:background="@drawable/corner_bg"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_above="@+id/l7"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                         android:text="Scan For Meal"
                        android:textColor="@color/deny_button_color"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_centerHorizontal="true"
                        />


                    <ImageView
                        android:id="@+id/qr"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/qr"
                        />



                </RelativeLayout>







            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/Widget.Button"
            android:text="Generate new card"
            android:background="@drawable/button_background"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="20dp"
            android:layout_below="@+id/upper"
            />



        <RelativeLayout
            android:id="@+id/second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="200dp"
            android:layout_marginHorizontal="20dp"
            >



            <RelativeLayout
                android:id="@+id/upper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/password"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textSize="18dp"
                    android:backgroundTint="@color/base_color"
                    />

                <ImageView
                    android:id="@+id/passHiddenIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_hide"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    />

            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@android:style/Widget.Button"
                android:text="Show Your Card"
                android:background="@drawable/button_background"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="20dp"
                android:layout_below="@+id/upper"
                android:layout_alignParentRight="true"
                />



        </RelativeLayout>




    </LinearLayout>

</ScrollView>
